<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <!-- binding object of ViewModel to the XML layout -->
        <data>
            <variable
                name="ViewModel"
                type="com.example.joystickfly.View_model.ViewModel" />
        </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.joystickfly.Views.JoystickView
            android:id="@+id/joystickView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            tools:ignore="MissingConstraints" />

        <FrameLayout
        android:layout_width="32dp"
        android:layout_height="180dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/joystickView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <SeekBar
            android:id="@+id/throttle"
            android:layout_width="180dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:onClick="@{()-> ViewModel.onThrottleClick()}"
            android:text="@={ViewModel.modelThrottle}"
            android:rotation="270" />

    </FrameLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.120000005">

        <TextView
            android:id="@+id/ipBu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_200"
            android:gravity="center"
            android:text="IP"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ipB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="@={ViewModel.modelIp}"
            />

        <TextView
            android:id="@+id/portBu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_200"
            android:gravity="center"
            android:text="Port"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/portB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:text="@={ViewModel.modelPort}"
            />
        <Button
            android:id="@+id/ConnectB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{()-> ViewModel.onClickConnect()}"
            android:text="Connect" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/rudder"
        android:layout_width="180dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:rotation="180"
        android:progress="50"
        android:onClick="@{()-> ViewModel.onRudderClick()}"
        android:text="@={ViewModel.modelRudder}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/joystickView" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </layout>